@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="card" id="client-index">
  <h2>- Clients -</h2>

  @if (@Model.Count == 0)
  {
    <h3>No client registered in the system.</h3>
    <p>Click @Html.ActionLink("here", "Create") to add new client.</p>
  } 
  else {
    <div id="client-list">
      @foreach(Client client in Model)
      {
        <div class="client-name">@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</div>
      }
    </div>
    <div class="buttons">
      <p>@Html.ActionLink("Register New Client", "Create")</p>
    </div>
  }
  <div class="buttons">
    <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
  </div>
</div>
