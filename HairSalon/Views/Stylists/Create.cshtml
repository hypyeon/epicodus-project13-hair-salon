@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<div class="card" id="stylist-create">
  <h2>Register New Stylist</h2>
  <div class="form">
    @using (Html.BeginForm())
    {
      <div class="form-div">
        <div>
          @Html.LabelFor(model => model.Name, "Name: ")
          @Html.TextBoxFor(model => model.Name)
        </div>
        <div>
          @Html.LabelFor(model => model.Specialty, "Specialty: ")
          @Html.DropDownListFor(model => model.Specialty, ViewBag.Specialties as List<SelectListItem>)
        </div>
        <div>
          @Html.LabelFor(model => model.Experience, "Experience (in year): ")
          @Html.TextBoxFor(model => model.Experience, new { type = "number", step = "0.5" })
        </div>
      </div>
      <input type="submit" value="Register" />
    }
  </div>
  <div class="buttons">
    <p>@Html.ActionLink("Back to Stylist List", "Index")</p>
    <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
  </div>
</div>