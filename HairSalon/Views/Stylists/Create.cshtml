@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h4>Register New Stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name: ")
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Experience, "Experience (in year): ")
  @Html.TextBoxFor(model => model.Experience, new { type = "number", step = "0.5" })

  @Html.LabelFor(model => model.Specialty, "Specialty: ")
  @Html.DropDownListFor(model => model.Specialty, ViewBag.Specialties as List<SelectListItem>)

  <input type="submit" value="Register" />
}
<p>@Html.ActionLink("Back to Stylist List", "Index", "Home")</p>