@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>Stylist Information</h2>
<hr />
<h3>@Html.DisplayFor(model => model.Name)<h3>
<p>@Html.DisplayFor(model => model.Experience) year(s) of experience | @Html.DisplayFor(model => model.Specialty)</p>
<p>Clients: </p>

<p>@Html.ActionLink("Edit Info", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Unregister this stylist", "Delete", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Back to Stylist List", "Index")</p>