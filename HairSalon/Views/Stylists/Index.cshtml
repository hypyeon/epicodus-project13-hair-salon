@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="card" id="stylist-index">
  <h2>- Hair Stylists- </h2>

  @if (@Model.Count == 0)
  {
    <h3>No stylist registered in the system. </h3>
    <p>Click @Html.ActionLink("here", "Create") to add new stylist.</p>
  } 
  else {
    <div id="stylist-list">
      @foreach(Stylist stylist in Model)
      {
        <div class="stylist-name">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</div>
      }
    </div>

    <div class="buttons">
      <p>@Html.ActionLink("Register New Stylist", "Create")</p>
    </div>
  }
  <div class="buttons">
    <p>@Html.ActionLink("Main Page", "Index", "Home")</p>
  </div>
</div>